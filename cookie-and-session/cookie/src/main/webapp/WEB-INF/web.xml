<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    
    <servlet>
        <servlet-name>cookie-create-server</servlet-name>
        <servlet-class>pers.xiaoming.javaweb.CreateServer</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>cookie-get-server</servlet-name>
        <servlet-class>pers.xiaoming.javaweb.GetServer</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>cookie-path-get-server</servlet-name>
        <servlet-class>pers.xiaoming.javaweb.GetCookieServer</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>cookie-create-server</servlet-name>
        <url-pattern>/cookie</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>cookie-get-server</servlet-name>
        <url-pattern>/cookie/get</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>cookie-path-get-server</servlet-name>
        <url-pattern>/cookie/cookiepath</url-pattern>
    </servlet-mapping>
    
    <welcome-file-list>
        <welcome-file>cookie.html</welcome-file>
    </welcome-file-list>
</web-app>
