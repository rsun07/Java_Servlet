<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>

    <context-param>
        <param-name>namespace</param-name>
        <param-value>all servlet shared context param</param-value>
    </context-param>
    <context-param>
        <param-name>servlet-context</param-name>
        <param-value>servlet-context-value</param-value>
    </context-param>

    <!--Register Servlet life cycle-->
    <servlet>
        <servlet-name>servlet</servlet-name>
        <servlet-class>pers.xiaoming.javaweb.BaseServlet</servlet-class>
        <load-on-startup>-1</load-on-startup>
    </servlet>


    <servlet-mapping>
        <servlet-name>servlet</servlet-name>
        <url-pattern>/servlet</url-pattern>
    </servlet-mapping>


    <welcome-file-list>
        <welcome-file>path.html</welcome-file>
    </welcome-file-list>
</web-app>
