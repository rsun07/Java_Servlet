<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>

    <filter>
        <filter-name>myfilter</filter-name>
        <filter-class>pers.xiaoming.javaweb.MyFilter</filter-class>
    </filter>

    <filter>
        <filter-name>myfilter-not-run-chain-dofilter</filter-name>
        <filter-class>pers.xiaoming.javaweb.MyFilterNotRunFilterChian</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>myfilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>myfilter-not-run-chain-dofilter</filter-name>
        <url-pattern>/notrun/*</url-pattern>
    </filter-mapping>

    <welcome-file-list>
        <welcome-file>lifecycle.html</welcome-file>
    </welcome-file-list>
</web-app>
