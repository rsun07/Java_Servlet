<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <servlet>
        <servlet-name>parameters</servlet-name>
        <servlet-class>pers.xiaoming.javaweb.HttpServletParams</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>redirectserver</servlet-name>
        <servlet-class>pers.xiaoming.javaweb.redirect.ForwardServer</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>redirectreceiptor</servlet-name>
        <servlet-class>pers.xiaoming.javaweb.redirect.ForwardReceiptor</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>parameters</servlet-name>
        <url-pattern>/httpservlet/params</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>redirectserver</servlet-name>
        <url-pattern>/httpservlet/redirect/forwardserver</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>redirectreceiptor</servlet-name>
        <url-pattern>/httpservlet/redirect/forwardreceiptor</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>httpservlet.html</welcome-file>
    </welcome-file-list>
</web-app>
